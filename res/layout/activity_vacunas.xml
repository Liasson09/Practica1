<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Vacunas">

    <!-- Tarjeta para Perros -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/little_dog"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/txtTipoMascotaPerros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perros"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/vacunaInfoPerros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vacunas_perros"
                android:layout_marginTop="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A partir de las 6 semanas: vacuna de parvovirus+/- virus del moquillo."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A los 2 meses: vacuna denominada Polivalente (parvovirus, virus del moquillo, virus de la para influenza, virus de la hepatitis+/- leptospira)."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A los 3 meses: refuerzo de la vacuna Polivalente."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A los 4 meses: refuerzo de la vacuna Polivalente +vacuna contra la Rabia donde sea necesaria."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Al año: refuerzo de vacuna Polivalente y refuerzo de vacuna contra la Rabia."/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Tarjeta para Gatos -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/little_cat"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/txtTipoMascotaGatos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gatos"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/vacunaInfoGatos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vacunas_gatos"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 meses: Vacuna trivalente frente a la panleucopenia, el calcivirus y la rinotraqueitis"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 meses y medio: Leucemia felina"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 meses: Revacunación de la trivalente (segunda dosis)"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 meses y medio: Revacunación de la leucemia (segunda dosis)"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 meses: Vacuna contra la rabia"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/btnRegresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:layout_gravity="center"
        android:layout_marginTop="16dp" />
</LinearLayout>





